{% extends "template.njk" %}
{% import "sections/header/_header.njk" as Header %}
{% import "sections/hero-area/hero-4.njk" as Hero %}
{% import "sections/features/feature-2.njk" as Feature %}
{% import "sections/brand/brand-1.njk" as Brand %}
{% import "sections/content/content-5.njk" as ContentTwo %}
{% import "sections/content/content-4.njk" as ContentThree %}
{% import "sections/pricing/sec-pricing-1.njk" as Pricing %}
{% import "sections/testimonial/testimonial-4.njk" as Testimonial %}
{% import "sections/footers/_footer-2-dark.njk" as Footer %}


{% block main %}
  {{Header.render(header.four)}}
  <!-- Hero Area -->
  {{Hero.render(hero.four)}}

  <!-- Brand section -->
  {{Brand.render()}}

  
  <!-- Feature section -->
  {{Feature.render("./", "bg-default-2 pt-15 pt-lg-22 pb-9 pb-md-0 pb-lg-17")}}


  <!-- Content section 1 -->

  <div class="content-section bg-default-2 pt-lg-15 pb-13 pb-lg-24">
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col-sm-10 col-lg-7">
          <div class="content-img pr-9">
            <img src="{{root}}image/l4/png/l4-content-img.png" alt="" class="gr-image-box-shadow mw-100">
          </div>
        </div>
        <div class="col-sm-10 col-lg-5">
          <div class="content-text pt-11 pt-lg-0 pl-xl-7">
            <h2 class="gr-text-4 mb-7">Track your progress <br class="d-none d-lg-block">with our advanced site.</h2>
            <p class="gr-text-8 mb-0">We share common trends and strategies for improving your rental income and making sure you stay in high demand.</p>
            <a href="#" class="btn-link with-icon gr-text-blue gr-text-7 font-weight-bold mt-9">Start a free trial <i class="icon icon-tail-right font-weight-bold"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content section 2 -->
  {{ContentTwo.render("./", "bg-default-2 pt-lg-13 pb-13 pb-lg-21")}}



  <!-- Content section 3 -->
  {{ContentThree.render("./", "bg-default-2 pb-13 pb-lg-25")}}


  <!-- Pricing section  -->
  <div class="pricing-section bg-default-5 pt-14 pt-lg-21">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10">
          <div class="section-title text-center mb-lg-7">
            <h2 class="gr-text-4 font-weight-bold mb-7">Pricing & Plans</h2>
            <p class="gr-text-8 mb-0 px-lg-7 px-xl-0">With lots of unique blocks, you can easily build a page without coding. Build your next landing page.</p>
          </div>
        </div>
      </div>
      {{Pricing.render()}}
    </div>
  </div>


  <!-- Testimonial section -->
  {{Testimonial.render("./", "bg-default-5")}}

  <!-- Footer section -->
  {{Footer.render(footer.four)}}



</div>
{% endblock %}
