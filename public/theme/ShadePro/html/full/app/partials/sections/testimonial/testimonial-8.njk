{% macro render(root,additional_class) %}

<div class="pt-13 pt-md-25 pb-13 pb-md-25 mx-md-6 rounded-10 mb-6 {{additional_class}}">
  <div class="container">
    <div class="row justify-content-center justify-content-lg-between align-items-center">
      <!-- .testimonial-right-image starts -->
      <div class="col-xs-10 col-md-6 col-lg-5 mb-n15 order-md-2">
        <div class="text-right pr-xl-13">
          <img src="{{root}}image/l8/png/testimonial-right-image.png" alt="" class="w-100">
        </div>
      </div>
       <!-- ./testimonial-right-image ends -->
      <div class="col-sm-11 col-md-6 col-lg-6 col-xl-6 pt-19 pt-lg-0">
        <div class="pr-lg-3 pr-xl-13 d-flex flex-column h-100 mt-8 mt-md-0">
          <div class="quote mb-13 mb-lg-25">
            <img src="{{root}}image/svg/quote-image.svg" alt="" data-aos="fade-right" data-aos-duration="400" data-aos-once="true">
          </div>
          <div class="ratings d-flex justify-content-start mb-12">
            <i class="fas fa-star mr-1 text-yellow-orange gr-text-8" data-aos="zoom-in"  data-aos-delay="300" data-aos-duration="400" data-aos-once="true"></i>
            <i class="fas fa-star mx-1 text-yellow-orange gr-text-8" data-aos="zoom-in" data-aos-delay="300" data-aos-duration="700" data-aos-once="true"></i>
            <i class="fas fa-star mx-1 text-yellow-orange gr-text-8" data-aos="zoom-in"  data-aos-delay="300" data-aos-duration="1000" data-aos-once="true"></i>
            <i class="fas fa-star mx-1 text-yellow-orange gr-text-8" data-aos="zoom-in"  data-aos-delay="300" data-aos-duration="1300" data-aos-once="true"></i>
            <i class="fas fa-star mx-1 text-yellow-orange gr-text-8" data-aos="zoom-in"  data-aos-delay="300" data-aos-duration="1600" data-aos-once="true"></i>
          </div>
          <p class="gr-text-6 gr-text-color-opacity" data-aos="fade-right" data-aos-delay="1000" data-aos-duration="800" data-aos-once="true">“OMG! I cannot believe that I have got a brand new room after getting your services. It was super easy to order and get started.”</p>
          <div class="pt-7 d-flex">
            <h3 class="gr-text-9 font-weight-bold mr-6">Maria José Botín</h3>
            <span class="gr-text-9 gr-text-color-opacity">Interior Designer</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endmacro %}
