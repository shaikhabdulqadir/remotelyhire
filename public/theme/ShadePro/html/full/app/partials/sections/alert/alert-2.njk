{% macro render(additional_class) %}

<div class="alert-section py-9 bg-blackish-blue dark-mode-texts {{additional_class}}">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-7 col-lg-8 col-md-10 col-sm-9 col-10">
        <div class="alert-content d-flex flex-column flex-lg-row align-items-center justify-content-lg-center text-center">
          <span class="d-inline-flex mr-2 gr-text-color">
            <i class="far fa-play-circle gr-text-9"></i>
          </span>
          <span class="alert-text gr-text-9 gr-text-color">Interested how our software works for you?  <a data-fancybox href="https://www.youtube.com/watch?v=_sI_Ps7JSEk" class="action-link gr-text-color gr-text-underline">Watch our 1 minute video</a></span>
        </div>
      </div>
    </div>
  </div>
</div>

{% endmacro %}
