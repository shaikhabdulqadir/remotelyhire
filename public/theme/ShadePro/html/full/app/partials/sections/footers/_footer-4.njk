{% macro render(options) %}
<div class="footer-section bg-default-4 py-9 {{options.wrapper_classes}}">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-lg-3 col-md-4">
        <div class="footer-logo text-center text-md-left mb-7 mb-md-0">
          <a href="index.html">
            <img src="{{options.root}}image/logo-main-black.png" alt="" class="light-version-logo mx-auto mx-md-0">
            <img src="{{options.root}}image/logo-main-white.png" alt="" class="dark-version-logo mx-auto mx-md-0">
          </a>
        </div>
      </div>
      <div class="col-lg-8 offset-lg-1 col-md-8">
        <ul class="footer-links gr-text-11 py-lg-7 list-unstyled mb-0 d-xs-flex align-items-center justify-content-around justify-content-md-end flex-wrap">
          <li class="ml-md-12 text-center"><a href="" class="gr-text-color gr-hover-text-blue font-weight-bold ">Privacy Policy</a></li>
          <li class="ml-md-12 text-center"><a href="" class="gr-text-color gr-hover-text-blue font-weight-bold ">Terms &amp; Conditions</a></li>
          <li class="ml-md-12 text-center"><a href="" class="gr-text-color gr-hover-text-blue font-weight-bold ">Support</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
{% endmacro %}


