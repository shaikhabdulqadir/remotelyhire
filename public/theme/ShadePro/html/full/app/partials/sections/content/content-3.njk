{% macro render(root,additional_class) %}

<div class="content-section {{additional_class}}">
  <div class="container">
    <div class="row">
      <div class="col-xl-6 col-lg-6 col-md-6">
        <div class="section-title mb-13 mb-lg-21">
          <h2 class="title gr-text-3 mb-7">Work around very talented people.</h2>
          <p class="gr-text-8">With lots of unique blocks, you can easily build <br class="d-none d-lg-block">a page easily without any coding. </p>
        </div>

        <div class="image-left pr-xl-6" data-aos="fade-up" data-aos-duration="1000" data-aos-once="true">
          <img src="{{root}}image/coworking/jpg/content1-img1.jpg" alt="" class="w-100 rounded-10">
        </div>
      </div>
      <div class="col-lg-6 col-md-6" data-aos="fade-up" data-aos-duration="1000" data-aos-once="true">
        <div class="image-right mt-9 mt-lg-4 pl-xl-6">
          <img src="{{root}}image/coworking/jpg/content1-img2.jpg" alt="" class="w-100 rounded-10">
        </div>
      </div>
    </div>
  </div>
</div>

{% endmacro %}
