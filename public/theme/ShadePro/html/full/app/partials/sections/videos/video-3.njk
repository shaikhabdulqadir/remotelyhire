{% macro render(root,additional_class) %}

<div class="position-relative bg-default-4 pt-16 pt-lg-25 pb-15 pb-lg-25 {{additional_class}}">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-lg-6 col-md-9 order-lg-2">
        <div class="hero-img" data-aos="fade-left" data-aos-duration="500" data-aos-once="true">
          <div class="hero-video-thumb position-relative gr-z-index-1">
            <img src="{{root}}image/l4/png/l4-hero-img.png" alt="" class="w-100 rounded-8">
            <a class="video-play-trigger gr-abs-center bg-white circle-xl gr-flex-all-center gr-abs-hover-y focus-reset" data-fancybox="" href="https://www.youtube.com/watch?v=_sI_Ps7JSEk" tabindex="-1"><i class="icon icon-triangle-right-17-2"></i></a>
            <div class="abs-shape gr-abs-tr-custom gr-z-index-n1">
              <img src="{{root}}image/l4/png/l4-hero-shape.png" alt="" class="w-100" data-aos="zoom-in" data-aos-delay="400" data-aos-duration="800" data-aos-once="true">
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-9 order-lg-1 mt-9 mt-lg-0" data-aos="fade-right" data-aos-duration="500" data-aos-once="true">
        <div class="hero-content">
          <h1 class="gr-text-2 mb-9">Get more visitors, <br>get more sales.</h1>
          <p class="gr-text-8 pr-5 pl-0 pr-xl-11 mb-9">With lots of unique blocks, you can easily build a page without coding. Build your next consultancy website within few minutes.</p>
          <div class="hero-btn">
            <a href="#" class="btn-link with-icon text-green gr-text-7 font-weight-bold">Start a free trial <i class="icon icon-tail-right font-weight-bold"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endmacro %}