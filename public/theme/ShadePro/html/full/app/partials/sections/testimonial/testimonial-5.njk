{% macro render(root,additional_class) %}

<div class="testimonial-section1 bg-default-4 {{additional_class}}">
  <div class="container">
    <div class="review-wrapper pt-9 pb-lg-25 pb-14 border-bottom">
      <div class="row justify-content-center align-items-center">
        <div class="col-xl-11 col-lg-12">
          <div class="review-widget media align-items-center px-lg-7 flex-column flex-sm-row">
            <div class="widget-image mr-12 mr-lg-19 mb-9 mb-md-0">
              <img class="circle-xxxl" src="{{root}}image/l5/jpg/l5-testimonial1.jpg" alt="">
            </div>
            <div class="widget-text">
              <img class="rating mb-11" src="{{root}}image/l5/png/5-stars.png" alt="">
