              <div class="reviewer-block d-flex flex-wrap">
                <h5 class="name gr-text-9 mr-7 mb-md-0">Franklin Hicks</h5>
                <span class="excerpt gr-text-9 mb-0 gr-text-color-opacity">Web Developer</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endmacro %}
