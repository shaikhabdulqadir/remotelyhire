  {
    image: "inner/team-image-1.png",
    title: "Joe Bridges",
    sm_title: "Founder"
  },
  {
    image: "inner/team-image-2.png",
    title: "Jeffrey Walters",
    sm_title: "Cheif Executive Officer"
  },
  {
    image: "inner/team-image-3.png",
    title: "Jason Reed",
    sm_title: "Chief Technology Officer"
  },
  {
    image: "inner/team-image-4.png",
    title: "Nellie Padilla",
    sm_title: "Creative Director"
  },
  {
    image: "inner/team-image-5.png",
    title: "Dean Bell",
