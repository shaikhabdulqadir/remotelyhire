{% macro render(root,additional_class) %}

<div class="content-section pt-12 pb-10 bg-default-6 py-xl-25 {{additional_class}}">
  <div class="container">
    <div class="row align-items-center justify-content-md-center">
      <div class="col-lg-4 col-md-10">
        <div class="content-text text-center text-lg-left mb-9 mb-lg-0 pr-xl-11">
          <h2 class="title gr-text-5 mb-8">Experienced experts are giving advices.</h2>
          <p class="gr-text-8 mb-9">With lots of unique blocks, you can easily build a page without coding. Build your next landing page.</p>
          <a href="" class="btn btn-primary gr-hover-y">Learn how we work</a>
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="content-img rounded-8">
          <img class="w-100 rounded-8" src="{{root}}image/l3/jpg/l3-content-img.jpg" alt="">
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="stats-wrapper mt-6 mt-md-0 pl-xl-9">
          <div class="single-stat py-6" data-aos="fade-left" data-aos-duration="800" data-aos-once="true">
            <h3 class="title gr-text-5 mb-5">1M+</h3>
            <p class="gr-text-8 mb-0">Customers visit Albino every month to get their service done.</p>
          </div>
          <div class="single-stat py-6" data-aos="fade-left" data-aos-duration="1200" data-aos-once="true">
            <h3 class="title gr-text-5 mb-5"><span class="counter">92</span>%</h3>
            <p class="gr-text-8 mb-0">Satisfaction rate comes from our awesome customers.</p>
          </div>
          <div class="single-stat py-6" data-aos="fade-left" data-aos-duration="1800" data-aos-once="true">
            <h3 class="title gr-text-5 mb-5"><span class="counter">4.9</span>/5.0</h3>
            <p class="gr-text-8 mb-0">Average customer ratings we have got all over internet.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% endmacro %}
