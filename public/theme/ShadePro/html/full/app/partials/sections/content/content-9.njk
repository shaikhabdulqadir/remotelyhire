{% macro render(root,additional_class) %}

<div class="content-section-3 {{additional_class}}">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-xl-6 col-lg-7 col-md-8">
        <div class="text-center content-3">
          <div class="section-title">
            <h2 class="title gr-text-3 mb-7">Trendy designs with better sound quality.</h2>
            <p class="gr-text-8 mb-17 px-11">We share common trends and strategies for improving your rental income.</p>
          </div>
          <div class="two-side-image d-flex">
            <div class="left-side-image" data-aos="fade-right" data-aos-duration="500">
              <img src="{{root}}image/l7/png/product-left.png" alt="" class="w-100">
            </div>
            <div class="right-side-image mt-25" data-aos="fade-left" data-aos-duration="500">
              <img src="{{root}}image/l7/png/product-right.png" alt="" class="w-100">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endmacro %}
