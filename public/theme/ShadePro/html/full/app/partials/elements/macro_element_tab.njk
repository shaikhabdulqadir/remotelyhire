{% macro premium( title, count, tabElem,tabElmCode,container_extend) %}
<div class="premium-clients mb-13">
  <div class="container{{' container-1600' if container_extend}}">
    <div class="etement-tab-head border rounded-top-15 pl-9 pr-7 py-6">
      <div class="row align-items-center">
        <div class="col-sm-6 col-md-4 d-flex flex-column justify-content-center text-center text-sm-left mb-7 mb-md-0">
          <p class="gr-text-color gr-text-8 mb-0 font-weight-bold">{{title | safe}}</p>            
        </div>
        {% if required %}
          <div class="col-sm-6 col-md-4 text-center text-sm-right text-md-center mb-7 mb-md-0">
            <a href="#" class="badge rounded-pill text-red px-6 py-3 gr-bg-red-opacity-2 gr-text-12 text-uppercase">Require {{required}}</a>
          </div>
        {% endif %}
        <div class="col-md-4 ml-md-auto">
        <!-- Element Tab nav -->
        <ul class="nav element-preview-tab justify-content-center justify-content-md-end" id="elem-tab-{{count}}" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active" id="tab-nav-{{count}}-1" data-toggle="tab" href="#tab-pane-{{count}}-1" role="tab" aria-controls="#tab-pane-{{count}}-1" aria-selected="true">Preview</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link" id="tab-nav-{{count}}-2" data-toggle="tab" href="#tab-pane-{{count}}-2" role="tab" aria-controls="tab-pane-{{count}}-2" aria-selected="false">Code</a>
          </li>
        </ul>
        </div>
       </div>
    </div>
  </div>

  <div class="container{{' container-1600' if container_extend}}">
    <!-- Element Tab Content -->
  <div class="tab-content border border-top-0 rounded-bottom-15" id="element-tab-content-{{count}}">
    <!-- Element View Tab Pane -->
    <div class="tab-pane fade show active" id="tab-pane-{{count}}-1" role="tabpanel" aria-labelledby="tab-nav-{{count}}-1">
      <div class="position-relative ">
        {% include tabElem %}
      </div>

    </div>
    <!-- Element Code Tab Pane -->
    <div class="tab-pane fade" id="tab-pane-{{count}}-2" role="tabpanel" aria-labelledby="tab-nav-{{count}}-2">
      <div class="code-single-block">
        
        {% include tabElmCode %}
      </div>
    </div>
  </div>
  </div>
</div>
{% endmacro %}


{% macro basic(title, tabElem, required,container_extend) %}
<div class="basic-clients mb-13">
  <div class="container{{' container-1600' if container_extend}}">
    <div class="etement-tab-head border rounded-top-15 pl-9 pr-9 py-6">
      {% if required %}
      <div class="row align-items-center">
        <div class="col-sm-6 col-lg-4 d-flex flex-column justify-content-center text-center text-sm-left mb-7 mb-md-0">
          <p class="gr-text-color gr-text-8 mb-0 font-weight-bold">{{title}} 
            <span class="badge badge-storm ml-5 px-3"><i class="fas fa-lock gr-text-14 mr-1"></i> locked</span>
          </p>            
        </div>
        <div class="col-sm-6 col-lg-4 text-center text-sm-right text-md-center mb-7 mb-md-0">
          <a href="#" class="badge rounded-pill text-red px-6 py-3 gr-bg-red-opacity-2 gr-text-12 text-uppercase">Require {{settings.required}}</a>
        </div>
        <div class="col-lg-4 text-center text-lg-right ml-md-auto">
          <a href="#" class="btn-link with-icon gr-text-9 text-blue font-weight-bold">Get the code<i class="fas fa-arrow-right"></i></a>
        </div>
       </div>
      {% endif %}
      {% if not required %}
      <div class="row align-items-center">
        <div class="col-sm-6 d-flex flex-column justify-content-center text-center text-sm-left mb-2 mb-sm-0">
          <p class="gr-text-color gr-text-8 mb-0 font-weight-bold">{{title}}</p>            
        </div>
        <div class="col-sm-6 text-center text-sm-right ml-md-auto">
          <a href="https://shade.uxtheme.net/shade-pro#" class="btn-link with-icon gr-text-9 text-blue font-weight-bold">Get the code<i class="fas fa-arrow-right"></i></a>
        </div>
       </div>
      {% endif %}
    </div>
  </div>

  <div class="container{{' container-1600' if container_extend}}">
    <!-- Element Tab Content -->
    <div class="tab-content border border-top-0 rounded-bottom-15" >
      <!-- Element View Tab Pane -->
      <div class="tab-pane fade show active">
        <div class="position-relative">
          {% include tabElem %}
        </div>

      </div>
    </div>
  </div>
</div>
{% endmacro %}