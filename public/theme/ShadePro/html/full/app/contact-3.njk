{% import "sections/header/_header.njk" as Header %}
{% block main %}
{{Header.render(header.innerPage,1)}}
<div class="inner-banner pt-29 pb-md-11">
  <div class="container">
    <div class="row  justify-content-center pt-5">
      <div class="col-xl-8 col-lg-9">
       <div class="px-md-15 text-center">
        <h2 class="title gr-text-2 mb-9">Contact us</h2>
        <p class="gr-text-8 mb-13">With lots of unique blocks, you can easily build a page without coding. Build your next consultancy website within few minutes.</p>
       </div>
      </div>
    </div>
  </div>
</div>


 <!-- Contact section  -->
 <div class=" pb-5 pb-md-0 ">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5 col-xl-4 order-md-2 mt-lg-11">
        <div class="row justify-content-center">
          <div class="col-12 col-xs-6 col-md-12 col-lg-10 mb-13">
            <div class="single-contact-widget d-flex">
              <div class="widget-icon gr-text-6 text-primary mr-7 mt-1">
                <i class="icon icon-email-83"></i>
              </div>
              <div class="widget-text">
                <p class="gr-text-7 mb-0">
                  support@grayic.com<br>
                  contact@grayic.com
                </p>
              </div>
            </div>
          </div>
          <div class="col-12 col-xs-6 col-md-12 col-lg-10 mb-13">
            <div class="single-contact-widget d-flex">
              <div class="widget-icon  gr-text-6 text-primary mr-7 mt-1">
                <i class="icon icon-pin-3-2"></i>
              </div>
              <div class="widget-text">
                <p class="gr-text-7 mb-0">
                  34 Madison Street,<br>
                  NY, USA 10005
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-5 col-xl-4 order-md-1 ">
        <div class="login-form bg-white border-gray-3 px-8 pt-8 py-9 shadow-1 rounded-10 gr-abs-md z-index-99 mb-9">
          <form action="./">
           <div class="row">
             <div class="col-12">
              <div class="form-group mb-7">
                <label for="name" class="gr-text-11 font-weight-bold text-blackish-blue">First & Last Name</label>
                <input class="form-control gr-text-11 border" type="text" id="name" placeholder="i.e. John Doe">
              </div>
             </div>
             <div class="col-12">
              <div class="form-group mb-7">
                <label for="name" class="gr-text-11 font-weight-bold text-blackish-blue">Email</label>
                <input class="form-control gr-text-11 border" type="text" id="email" placeholder="i.e. john@mail.com">
              </div>
             </div>
             <div class="col-12">
              <div class="form-group mb-7">
                <label for="name" class="gr-text-11 font-weight-bold text-blackish-blue">Subject</label>
                <input class="form-control gr-text-11 border" type="text" id="subject" placeholder="i.e. I need a help">
              </div>
             </div>
             <div class="col-12">
              <div class="form-group mb-7">
                <label for="name" class="gr-text-11 font-weight-bold text-blackish-blue">Message</label>
                <textarea name="textblock" id="message" class="form-control gr-text-11 border-gray-3 gr-textarea-height"></textarea>
              </div>
             </div>
             <div class="col-12">
              <div class="button-block mt-3 ">
                <button class="form-btn btn btn-primary w-100">Send</button>
              </div>
             </div>
           </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="google-map fluid-map-height " id="googleMap"></div>

